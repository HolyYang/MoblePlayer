<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--标题栏-->
    <include layout="@layout/titlebar"/>


    <!--FrafragmenmeLayout-->
    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </FrameLayout>

    <!--RadioGroup-->
    <RadioGroup
        android:id="@+id/rg_bottom_tag"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:text="本地视频"
            android:drawableTop="@drawable/rb_video_drawable_selector"
            android:id="@+id/br_video"
            style="@style/bottom_tag_style"
            />
        <RadioButton
            android:text="本地音频"
            android:drawableTop="@drawable/br_audio_drawable_selector"
            android:id="@+id/br_audio"
            style="@style/bottom_tag_style"
            />
        <RadioButton
            android:text="网络视频"
            android:drawableTop="@drawable/br_net_video_drawable_selector"
            android:id="@+id/br_net_video"
            style="@style/bottom_tag_style"
            />
        <RadioButton
            android:text="网络音乐"
            android:drawableTop="@drawable/br_net_audio_drawable_selector"
            android:id="@+id/br_net_audio"
            style="@style/bottom_tag_style"
            />
    </RadioGroup>
</LinearLayout>