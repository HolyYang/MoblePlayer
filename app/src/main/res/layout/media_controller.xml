<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:background="#347239"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频名称"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <TextView

                android:id="@+id/tv_time"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30:20"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="#3a75a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_voice"
                android:layout_width="60dp"
                android:text="声音"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"/>

            <SeekBar
                android:id="@+id/seekbar_sound"
                android:layout_weight="1"
                android:minHeight="6dp"
                android:maxHeight="6dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_switch_player"
                android:text="简介"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#9631b4"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:background="#3a75a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_currtent_time"
                android:layout_width="60dp"
                android:text="00:00"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"/>

            <SeekBar
                android:id="@+id/seekbar_video"
                android:layout_weight="1"
                android:minHeight="6dp"
                android:maxHeight="6dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_duration"
                android:text="20:00"
                android:textAlignment="center"
                android:background="#ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="#e98d30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tv_tuichu"
                android:layout_width="55dp"
                android:text="退出"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"/>
            <Button
                android:id="@+id/tv_houtui"
                android:layout_width="55dp"
                android:text="后退"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"/>
            <Button
                android:id="@+id/tv_zanting"
                android:layout_width="55dp"
                android:text="暂停"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"/>
            <Button
                android:id="@+id/tv_qianjin"
                android:layout_width="55dp"
                android:text="前进"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/tv_quanping"
                android:text="全屏"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="55dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>